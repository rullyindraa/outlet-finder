extends ../layout

block content
  include include/navbar.pug
  .content-wrapper
    .container-fluid
      // Breadcrumbs
      ol.breadcrumb(style='background-color: #DAE1E7')
        li.breadcrumb-item.active.h4 Create Outlet 2
      form.needs-validation(action='#', method='POST', novalidate='', style='color: black; margin-left: -12px;')
        .form-group
          .col-lg-4.col-md-4.col-sm-4.col-xs-4
            label(for='student_id') Business:
          .col-lg-6.col-md-6.col-sm-6.col-xs-6
            select.form-control.selectpicker(name="business")
              each value in business
                option(value=value.id) #{value.name}
            .invalid-feedback
              | Please select categories
        .form-group
          .col-lg-4.col-md-4.col-sm-4.col-xs-4
            label(for='name') Outlet Name:
          .col-lg-6.col-md-6.col-sm-6.col-xs-6
            input.form-control(type='text', name='name', placeholder='Outlet Name', required='')
            .invalid-feedback
              | Please enter your outlet name
        .form-group
          .col-lg-4.col-md-4.col-sm-4.col-xs-4
            label(for='email') Email:
          .col-lg-6.col-md-6.col-sm-6.col-xs-6
            input.form-control(type='email', name='email', placeholder='Email', required='')
            .invalid-feedback
              | Please enter a valid email
        .form-group
          .col-lg-4.col-md-4.col-sm-4.col-xs-4
            label(for='phone_number') Contact Number:
          .col-lg-6.col-md-6.col-sm-6.col-xs-6
            input.form-control(type='text', name='phone_number', placeholder='Phone Number', required='')
            .invalid-feedback
              | Please enter a valid contact number
        .form-group
          .col-lg-4.col-md-4.col-sm-4.col-xs-4
            label(for='website') Website:
          .col-lg-6.col-md-6.col-sm-6.col-xs-6
            input.form-control(type='text', name='website', placeholder='Website', required='')
            .invalid-feedback
              | Please enter your website
        .form-group
          .col-lg-4.col-md-4.col-sm-4.col-xs-4
            label(for='photo') Photo:
          .col-lg-6.col-md-6.col-sm-6.col-xs-6
            .custom-file
              input#photo.form-control(type='file' accept="image/*" name='photo')
              input(type='hidden', name='old_photo')
        .form-group.col-lg-8.col-md-8.col-sm-8.col-xs-8
          label(for='description') Description:
          textarea.form-control(name="description", rows="4")
          .invalid-feedback
            | Please enter your description
        .form-group.col-lg-10.col-md-10.col-sm-10.col-xl-10
          label(for='address') Address:
          .card.mb-3
            .card-body
              .form-row
                .form-group.col-lg-12.col-md-12.col-sm-12.col-xl-12
                  input#pac-input.form-control(type='text', name='raw_address', placeholder='Enter an address', required='')
              #map
              #infowindow-content
                img#place-icon(src='', width='16', height='16')
                span#place-name.title
                br
                span#place-address
              script(src='/javascripts/maps-business.js')
              script(src='https://maps.googleapis.com/maps/api/js?key=AIzaSyBSKactSNtQkMmc86xP_oknMBCABF2ioYI&libraries=places&callback=initMap', async='', defer='')
              hr
              .form-row
                .form-group.col-lg-6.col-md-6.col-sm-6.col-xl-6
                  label Line 1:
                  input#line1.form-control(type='text', name='line1', placeholder='Line 1 Address', required='')
                .form-group.col-lg-6.col-md-6.col-sm-6.col-xl-6
                  label Line 2:
                  input#line2.form-control(type='text', name='line2', placeholder='Line 2 Address', required='')
              .form-row
                .form-group.col-lg-4.col-md-4.col-sm-4.col-xl-4
                  label Country:
                  input#country.form-control(type='text', name='country', placeholder='Country', required='')
                .form-group.col-lg-4.col-md-4.col-sm-4.col-xl-4
                  label Administrative Area Level 1:
                  input#adm1.form-control(type='text', name='adm_area_lv1', placeholder='Administrative Area Level 1', required='')
                .form-group.col-lg-4.col-md-4.col-sm-4.col-xl-4
                  label Administrative Area Level 2:
                  input#adm2.form-control(type='text', name='adm_area_lv2', placeholder='Administrative Area Level 2', required='')
              .form-row
                .form-group.col-lg-4.col-md-4.col-sm-4.col-xl-4
                  label Administrative Area Level 3:
                  input#adm3.form-control(type='text', name='adm_area_lv3', placeholder='Administrative Area Level 3', required='')
                .form-group.col-lg-4.col-md-4.col-sm-4.col-xl-4
                  label Administrative Area Level 4:
                  input#adm4.form-control(type='text', name='adm_area_lv4', placeholder='Administrative Area Level 4', required='')
                .form-group.col-lg-4.col-md-4.col-sm-4.col-xl-4
                  label Postal Code:
                  input#postal_code.form-control(type='text', name='postal_code', placeholder='Postal Code', required='')
              .form-row
                .form-group.col-lg-6.col-md-6.col-sm-6.col-xs-6
                  label Latitude:
                  input#lat.form-control(type='text', name='lat', placeholder='Latitude', required='')
                .form-group.col-lg-6.col-md-6.col-sm-6.col-xs-6
                  label Longitude:
                  input#lng.form-control(type='text', name='lng', placeholder='Longitude', required='')
              .form-row
                .form-group.col-lg-12.col-md-12.col-sm-12.col-xl-12
                  label Formatted Address:
                  input#formatted_address.form-control(type='text', name='formatted_address', placeholder='Enter an address', required='').form-group.col-lg-10.col-md-10.col-sm-10.col-xl-10
          label(for='open_hours') Open Hours:
          .card.mb-3
            .card-body
              .form-row
                .form-group.col-lg-4.col-md-4.col-sm-4.col-xs-4
                  label.mr-5(for='day1') Monday
                .form-group.col-lg-2.col-md-2.col-sm-2.col-xs-2.check-collapse
                  input#ck1.form-check-input.check1(type='checkbox' name='check')
                  label.form-check-label
                    | Closed
                .form-group.col-lg-3.col-md-3.col-sm-3.col-xs-3
                  input#open.form-control.time(type='time', name='open', min="00:00" max="24:00" value="08:30" required)
                .form-group.col-lg-3.col-md-3.col-sm-3.col-xs-3
                  input#close.form-control.time(type='time', name='close', min="00:00" max="24:00" value="16:30" required)
              .form-row
                .form-group.col-lg-4.col-md-4.col-sm-4.col-xs-4
                  label.mr-5(for='day2') Tuesday
                .form-group.col-lg-2.col-md-2.col-sm-2.col-xs-2.check-collapse
                  input#ck2.form-check-input.check2(type='checkbox', name='check')
                  label.form-check-label
                    | Closed
                .form-group.col-lg-3.col-md-3.col-sm-3.col-xs-3
                  input#open2.form-control.time2(type='time', name='open', min="00:00" max="24:00" value="08:30" required)
                .form-group.col-lg-3.col-md-3.col-sm-3.col-xs-3
                  input#close2.form-control.time2(type='time', name='close', min="00:00" max="24:00" value="16:30" required)
              .form-row
                .form-group.col-lg-4.col-md-4.col-sm-4.col-xs-4
                  label.mr-5(for='day3') Wednesday
                .form-group.col-lg-2.col-md-2.col-sm-2.col-xs-2.check-collapse
                  input.form-check-input(type='checkbox', value='')
                  label.form-check-label
                    | Closed
                .form-group.col-lg-3.col-md-3.col-sm-3.col-xs-3
                  input#wed_open.form-control(type='time', name='open', min="00:00" max="24:00" value="08:30" required)
                .form-group.col-lg-3.col-md-3.col-sm-3.col-xs-3
                  input#wed_close.form-control(type='time', name='close', min="00:00" max="24:00" value="16:30" required)
              .form-row
                .form-group.col-lg-4.col-md-4.col-sm-4.col-xs-4
                  label.mr-5(for='day4') Thursday
                .form-group.col-lg-2.col-md-2.col-sm-2.col-xs-2.check-collapse
                  input.form-check-input(type='checkbox', value='')
                  label.form-check-label
                    | Closed
                .form-group.col-lg-3.col-md-3.col-sm-3.col-xs-3
                  input#thu_open.form-control(type='time', name='open', min="00:00" max="24:00" value="08:30" required)
                .form-group.col-lg-3.col-md-3.col-sm-3.col-xs-3
                  input#thu_close.form-control(type='time', name='close', min="00:00" max="24:00" value="16:30" required)
              .form-row
                .form-group.col-lg-4.col-md-4.col-sm-4.col-xs-4
                  label.mr-5(for='day5') Friday
                .form-group.col-lg-2.col-md-2.col-sm-2.col-xs-2.check-collapse
                  input.form-check-input(type='checkbox', value='')
                  label.form-check-label
                    | Closed
                .form-group.col-lg-3.col-md-3.col-sm-3.col-xs-3
                  input#fri_open.form-control(type='time', name='open', min="00:00" max="24:00" value="08:30" required)
                .form-group.col-lg-3.col-md-3.col-sm-3.col-xs-3
                  input#fri_close.form-control(type='time', name='close', min="00:00" max="24:00" value="16:30" required)
              .form-row
                .form-group.col-lg-4.col-md-4.col-sm-4.col-xs-4
                  label.mr-5(for='day6') Saturday
                .form-group.col-lg-2.col-md-2.col-sm-2.col-xs-2.check-collapse
                  input.form-check-input(type='checkbox', value='' checked)
                  label.form-check-label
                    | Closed
                .form-group.col-lg-3.col-md-3.col-sm-3.col-xs-3
                  input#sat_open.form-control(type='time', name='open', min="00:00" max="24:00" value="08:30" required)
                .form-group.col-lg-3.col-md-3.col-sm-3.col-xs-3
                  input#sat_close.form-control(type='time', name='close', min="00:00" max="24:00" value="16:30" required)
              .form-row
                .form-group.col-lg-4.col-md-4.col-sm-4.col-xs-4
                  label(for='day7') Sunday
                .form-group.col-lg-2.col-md-2.col-sm-2.col-xs-2.check-collapse
                  input.form-check-input(type='checkbox', value='' checked)
                  label.form-check-label
                    | Closed
                .form-group.col-lg-3.col-md-3.col-sm-3.col-xs-3
                  input#sun_open.form-control(type='time', name='open', min="00:00" max="24:00" value="08:30" required)
                .form-group.col-lg-3.col-md-3.col-sm-3.col-xs-3
                  input#sun_close.form-control(type='time', name='close', min="00:00" max="24:00" value="16:30" required)
              .form-row
                .form-group.col-lg-3.col-md-3.col-sm-3.col-xs-3
                  label(for='day7') Sundaya
                .form-group.col-lg-9.col-md-9.col-sm-9.col-xs-9.check-collapse
                  label.col
                    input.form-check-input.col(type='checkbox', value='')
                    | Closed 2
                  //.form-group.col 
                  input#sat_open.form-control.col-3(type='time', name='open', min='00:00', max='24:00', value='08:30', required='required')
                  //.form-group.col
                  input#sat_close.form-control.col-3(type='time', name='close', min='00:00', max='24:00', value='16:30', required='required')
              .form-group.col-lg-8.col-md-8.col-sm-8.col-xs-8(style='margin-left: 5px;')
                input.form-check-input(name='public_holiday', type='checkbox', value='1', checked)
                label.form-check-label
                  | Set as closed on public holiday

        input.btn.btn-md.color-ink.ml-3.mb-5(type='submit', value='Submit')
        input.btn.btn-md.color-ink.ml-2.mb-5(type='submit', value='Submit and Add Outlet >')

  include ../includes/logout.pug
  
  include ../includes/footer.pug

extends ../layout-guest

block content
  nav.navbar.navbar-expand-lg.navbar-light.color-ink
    a.navbar-brand(href='/' style="color: #FFFFFF;")
      img(src="/images/logo-light.png" height="31" alt="")
    button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
      span.i.fa.fa-fw.fa-bars(style='color: white;')
    #navbarSupportedContent.collapse.navbar-collapse.justify-content-right
      ul.navbar-nav.ml-auto.justify-content-right
        li.nav-item.mr-2
          a.nav-link.nav-top.rounded.border-light.text-white(href='/')
            |  Home
        li.nav-item.mr-2
          a.nav-link.nav-top.rounded.border-light.text-white(href='/categories')
            |  Browse Directory
        li.nav-item.mr-2
          a.signin.nav-link.nav-top.rounded.border-light.text-white(href='#', data-toggle='modal', data-target='.login')
            |  Login
        li.nav-item.mr-2
          a.signup.nav-link.nav-top.rounded.border-light.text-white(href='#', data-toggle='modal', data-target='.register')
            |  Register
  .content-wrapper
    .container-fluid
      h2.mt-4.mb-3(align='center') Summary of Outlet Reviews
      .row.justify-content-center
        .pull-left
          i.fa.fa-lg.fa-star.star-orange
          i.fa.fa-lg.fa-star.star-orange
          i.fa.fa-lg.fa-star.star-orange
          i.fa.fa-lg.fa-star.star-orange
          i.fa.fa-lg.fa-star.star-gray.mr-2
          a(href='') 24 reviews
      .text-center.mt-2
        .bold 4 out of 5 stars
      .row.justify-content-center
        button.btn.btn-ink.color-pblue.btn-xl.mt-3.mb-4.text-uppercase(style='border-radius: 7px; padding: 1rem 5rem;', type='button', data-toggle='modal', data-target='.bd-example-modal-lg') Add Review
      .container
        .row.mt-3
          .col-sm-6.col-md-4.col-lg-3
            .row
              .form-group.col-lg-12.col-md-12.col-sm-12
                select.form-control(name='sort-by')
                  option(selected='', hidden='') - Sort by -
                  option(value='most-recent') Most Recent
            .card.mb-4
              .card-body
                .pull-left
                  .pull-left(style='width:35px; line-height:1;')
                    div(style='height:9px; margin:5px 0;')
                      | 5 
                      i.fa.fa-fw.fa-star
                  .pull-left(style='width:115px;')
                    .progress(style='height:9px; margin:8px 0;')
                      .progress-bar.bg-warning(role='progressbar', aria-valuenow='5', aria-valuemin='0', aria-valuemax='5', style='width: 1000%')
                        span.sr-only 80% Complete (danger)
                  .pull-right(style='margin-left:8px;') 1
                .pull-left
                  .pull-left(style='width:35px; line-height:1;')
                    div(style='height:9px; margin:5px 0;')
                      | 4 
                      i.fa.fa-fw.fa-star
                  .pull-left(style='width:115px;')
                    .progress(style='height:9px; margin:8px 0;')
                      .progress-bar.bg-warning(role='progressbar', aria-valuenow='4', aria-valuemin='0', aria-valuemax='5', style='width: 80%')
                        span.sr-only 80% Complete (danger)
                  .pull-right(style='margin-left:8px;') 1
                .pull-left
                  .pull-left(style='width:35px; line-height:1;')
                    div(style='height:9px; margin:5px 0;')
                      | 3 
                      i.fa.fa-fw.fa-star
                  .pull-left(style='width:115px;')
                    .progress(style='height:9px; margin:8px 0;')
                      .progress-bar.bg-warning(role='progressbar', aria-valuenow='3', aria-valuemin='0', aria-valuemax='5', style='width: 60%')
                        span.sr-only 80% Complete (danger)
                  .pull-right(style='margin-left:8px;') 0
                .pull-left
                  .pull-left(style='width:35px; line-height:1;')
                    div(style='height:9px; margin:5px 0;')
                      | 2 
                      i.fa.fa-fw.fa-star
                  .pull-left(style='width:115px;')
                    .progress(style='height:9px; margin:8px 0;')
                      .progress-bar.bg-warning(role='progressbar', aria-valuenow='2', aria-valuemin='0', aria-valuemax='5', style='width: 40%')
                        span.sr-only 80% Complete (danger)
                  .pull-right(style='margin-left:8px;') 0
                .pull-left
                  .pull-left(style='width:35px; line-height:1;')
                    div(style='height:9px; margin:5px 0;' align='center')
                      | 1
                      | 
                      i.fa.fa-fw.fa-star
                  .pull-left(style='width:115px;')
                    .progress(style='height:9px; margin:8px 0;')
                      .progress-bar.bg-warning(role='progressbar', aria-valuenow='1', aria-valuemin='0', aria-valuemax='5', style='width: 20%')
                        span.sr-only 80% Complete (danger)
                  .pull-right(style='margin-left:8px;') 0
          .col-sm-9.col-md-8.col-lg-9
            for r in data
              strong
                h6(style='color: black;')
                  =r.name
              p(style='color: gray; font-size: 14px')
                =r.created
                |   - outlet : 
                a(href='/detail/outlet/'+r['outlet.id'])
                  =r['outlet.name']
              p.text-justify(style='color: black; margin-top: -10px; margin-bottom: 5px;')
                =r.content
              p(style='margin-top: -18px;')
                .star-box(style='display: inline-block;width:auto ;white-space: nowrap; margin-left: -2px')
                  span.unfilled(style='position: absolute;') 
                    i.fa.fa-fw.fa-star.star-gray
                    i.fa.fa-fw.fa-star.star-gray
                    i.fa.fa-fw.fa-star.star-gray
                    i.fa.fa-fw.fa-star.star-gray
                    i.fa.fa-fw.fa-star.star-gray
                  span.filled(style='white-space: nowrap; overflow: hidden;position: absolute; width:'+r.rating*1.25+'em')
                    i.fa.fa-fw.fa-star.star-orange
                    i.fa.fa-fw.fa-star.star-orange
                    i.fa.fa-fw.fa-star.star-orange
                    i.fa.fa-fw.fa-star.star-orange
                    i.fa.fa-fw.fa-star.star-orange
                  br
    //- div(style='margin-top: -20px;')

    include footer.pug
      
    include add-review.pug
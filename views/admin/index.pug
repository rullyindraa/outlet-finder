extends ../layout

block content
  include include/navbar.pug
  .content-wrapper
    .container-fluid
      // Breadcrumbs
      ol.breadcrumb.color-pblue
        li.breadcrumb-item.active.h4 Dashboard
      // Icon Cards
      .row
        .col-xl-3.col-sm-6.mb-3
          .card.text-white.blue-1.o-hidden.h-100
            .card-body
              .card-body-icon
                i.fa.fa-fw.fa-dollar
              .mr-5
                | 
                =totalb
                |  Total Business
            a.card-footer.text-white.clearfix.small.z-1(href='/admin/business')
              span.float-left View Details
              span.float-right
                i.fa.fa-angle-right
        .col-xl-3.col-sm-6.mb-3
          .card.text-white.blue-2.o-hidden.h-100
            .card-body
              .card-body-icon
                i.fas.fa-shopping-bag.fa-fw
              .mr-5
                | 
                =totalo
                |  Total Outlets
            a.card-footer.text-white.clearfix.small.z-1(href='/admin/outlets')
              span.float-left View Details
              span.float-right
                i.fa.fa-angle-right
        .col-xl-3.col-sm-6.mb-3
          .card.text-white.blue-3.o-hidden.h-100
            .card-body
              .card-body-icon
                i.fa.fa-fw.fa-th-list
              .mr-5
                | 
                =totalc
                |  Category
            a.card-footer.text-white.clearfix.small.z-1(href='/admin/categories')
              span.float-left View Details
              span.float-right
                i.fa.fa-angle-right
        .col-xl-3.col-sm-6.mb-3
          .card.text-white.blue-4.o-hidden.h-100
            .card-body
              .card-body-icon
                i.fa.fa-fw.fa-comments
              .mr-5
                | 
                =totalr
                |  Reviews
            a.card-footer.text-white.clearfix.small.z-1(href='/admin/reviews')
              span.float-left View Details
              span.float-right
                i.fa.fa-angle-right
      //- h5.mt-3(style='color: black;')
      //-   | New Business
      //- hr.color-nantucket(style='margin-top: 0px; height: 1px;')
      hr
      .card.mb-3.mt-5
        .card-header.card-header-primary
          .card-icon.blue-1
            i.fas.fa-dollar-sign.fa-2x
          h5.mt-3(style='color: black;') New Business
        .card-body
          .table-responsive(style='color: black;')
            table.table-striped.table.col-lg-12.col-md-12.col-sm-12.col-xs-12
              thead
                tr
                  th Name
                  th Categories
                  th Outlets
                  th City
                  th Owner
              tbody
                for b in data_b
                  tr
                    td=b.business
                    td=b.category_names
                    td=b.count_outlet
                      | 
                      a(href='/admin/oulets/business/'+b.id) view outlets >
                    td=b['address.city']
                    td
                      a(href='#', data-toggle='tooltip', data-placement='top', title='here')=b['user.username']
      br
      .card.mb-3.mt-7
        .card-header
          .card-icon.blue-2
            i.fas.fa-shopping-bag.fa-2x
          h5.mt-3(style='color: black;') New Outlet
        .card-body
          .table-responsive-lg(style='color: black;')
            table.table-striped.table.col-lg-12.col-md-12.col-sm-12.col-xs-12
              thead
                tr
                  th Name
                  th Business
                  th City
                  th Page Views
                  th 
              tbody
                for o in data_o
                  tr
                    td=o.outlet_name
                    td=o[`business.business_name`]
                    td=o[`address.city_name`]
                    td=o.count_view
                    td
                      a(href='/detail/outlet/'+o.id) view detail >

  include ../includes/logout.pug

  include ../includes/footer.pug

  script.
    $(function () {
      $('[data-toggle="tooltip"]').tooltip()
    })